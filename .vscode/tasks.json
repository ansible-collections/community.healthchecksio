{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run all tests",
            "dependsOn": [
                "Run sanity tests",
                "Run unit tests",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run sanity tests",
            "type": "shell",
            "command": "ansible-test",
            "args": [
                "sanity",
                "--docker",
                "default",
                "--python",
                "3.9",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": {
                "owner": "sanity",
                "pattern": [
                    {
                        "regexp": "^.+: Found \\d+ (.+) issue\\(s\\) which need to be resolved:$",
                        "message": 1,
                    },
                    {
                        "regexp": "^(ERROR): (.+):(\\d+):(\\d+): (.+)$",
                        "severity": 1,
                        "file": 2,
                        "line": 3,
                        "column": 4,
                        "message": 5,
                        "loop": true
                    }
                ]
            }
        },
        {
            "label": "Run unit tests",
            "type": "shell",
            "dependsOn": "Coverage: Erase",
            "command": "ansible-test",
            "args": [
                "units",
                "--docker",
                "default",
                "--python",
                "3.9",
                "-v",
                "--coverage",
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
        },
        {
            "label": "Coverage: Erase",
            "type": "shell",
            "command": "ansible-test",
            "args":[
                "coverage",
                "erase"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Coverage: Combine",
            "type": "shell",
            "command": "ansible-test",
            "dependsOn": "Run unit tests",
            "args":[
                "coverage",
                "combine"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Coverage: Generate HTML",
            "type": "shell",
            "command": "ansible-test",
            "dependsOn": "Coverage: Combine",
            "args":[
                "coverage",
                "html"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
    ]
}
